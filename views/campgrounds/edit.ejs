<%- include('../partials/header') %> 

<div class="container" style="margin-top: 25px;">
    
    <h1 style="text-align: center;" >Update <%= campground.name %> </h1>

    <div style="margin: 30px auto; width: 30% ;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <!-- <label for="comment">Comment:</label> -->
                <textarea class="form-control" rows="5" id="comment" style="color:grey;" name="campground[description]"><%= campground.description %></textarea>
              </div>
            
            <div class="form-group">
                <button class="btn btn-md btn-success btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>

</div>


<%- include('../partials/footer') %> 
