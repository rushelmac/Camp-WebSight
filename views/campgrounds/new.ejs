<%- include('../partials/header') %> 

<div class="container" style="margin-top: 25px;">
    
    <h1 style="text-align: center;" >Create a new CampGround</h1>

    <div style="margin: 30px auto; width: 30% ;">
        <form action="/campgrounds" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image url">
            </div>
            <div class="form-group">
                <!-- <label for="comment">Comment:</label> -->
                <textarea class="form-control" rows="5" id="comment" style="color:grey;" name="description">Description</textarea>
              </div>
            
            <div class="form-group">
                <button class="btn btn-md btn-success btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>

</div>


