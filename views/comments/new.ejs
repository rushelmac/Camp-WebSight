<%- include('../partials/header') %> 

<div class="container" style="margin-top: 25px;">
    
    <h1 style="text-align: center;" >Add a new a comment to <%= campground.name %></h1>

    <div style="margin: 30px auto; width: 30% ;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
            
            <div class="form-group">
                <button class="btn btn-md btn-success btn-block">Submit</button>
            </div>        
        </form>
        <a href="/campgrounds">Back</a>
    </div>

</div>


<%- include('../partials/footer') %> 
